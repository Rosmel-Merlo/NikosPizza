@model NikosPizza.Application.Queries.Login.UserLoginQuery

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Estilos personalizados para una apariencia moderna */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #1d1f27;
            font-family: Arial, sans-serif;
            margin: 0;
        }

        .login-container {
            background-color: #2d2f39;
            padding: 40px;
            border-radius: 10px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            color: #fff;
        }

        .form-label {
            color: #b0b3c2;
        }

        h1 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 30px;
            font-size: 24px;
        }

        .form-control {
            background-color: #3d3f4c;
            border: none;
            border-radius: 5px;
            padding: 15px;
            color: #ffffff;
        }

            .form-control::placeholder {
                color: #b0b3c2;
            }

        .btn-primary {
            background-color: #187bff;
            border: none;
            border-radius: 5px;
            padding: 15px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #105ec4;
            }

        .alert {
            border-radius: 5px;
            font-size: 14px;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <h1>Inicio de Sesión</h1>

        <form method="post" action="/Users/Login" enctype="application/x-www-form-urlencoded">
            <div class="mb-3">
                <label for="usuario" class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control" id="usuario" name="Usuario" placeholder="Ingrese su correo" required>
            </div>
            <div class="mb-3">
                <label for="contrasenia" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="contrasenia" name="Contrasenia" placeholder="Ingrese su contraseña" required>
            </div>
            <button type="submit" class="btn btn-primary">Registrate</button>
            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
        </form>


        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
        }
    </div>
</body>

</html>
